<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="6dp"
    android:layout_marginHorizontal="5dp"
    android:orientation="vertical"
    android:background="@color/secondLayerOfWhite"
    android:padding="4dp"
    android:elevation="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/groupName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text=""
            android:textSize="18dp"
            />
        <TextView
            android:id="@+id/statusOfPoll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingHorizontal="4dp"
            android:paddingVertical="2dp"
            android:textColor="@color/textColorWhite"
            android:background="@drawable/round_corner_layout_red"
            android:text="expired"
            android:gravity="center"
            android:textSize="16dp"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="4dp"
        android:layout_marginVertical="6dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/titleOfPoll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:textColor="@color/calResultChartBgGrey"
            android:text="Question Question Question Question"/>
        <TextView
            android:id="@+id/descriptionOfPoll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/colorCalculatorPressedButtonCal"
            android:text=""/>
        <TextView
            android:id="@+id/secondDescriptionOfPoll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/colorCalculatorPressedButtonCal"
            android:text=""/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/rankView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="28dp"
                android:text=""/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/showMoreDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Show more"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@color/colorAccent"
                android:textAlignment="center"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>