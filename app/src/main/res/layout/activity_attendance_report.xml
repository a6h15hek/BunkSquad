<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AttendanceReportActivity"
    android:orientation="vertical"
    android:background="@color/colorMainScreenWhite">
    <!--Top Action Bar-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:background="@color/colorHeaderBackground">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/back_btn_result"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_arrow_back_white_24dp"
                android:textColor="@color/colorLogoPrimary"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"/>
            <TextView
                android:id="@+id/headerMsg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Report"
                android:textColor="@color/colorLogoPrimary"
                android:textSize="24dp"
                android:gravity="center"
                android:paddingLeft="15dp"/>
        </LinearLayout>
    </RelativeLayout>
    <!--Content of screen-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/doughnut_chart_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    android:padding="0dp"
                    android:background="@drawable/round_corner_layout_grey"
                    android:layout_weight="0.6"
                    android:gravity="center">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent">
                        <ProgressBar
                            android:id="@+id/background_progressbar"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="210dp"
                            android:layout_height="210dp"
                            android:indeterminate="false"
                            android:max="100"
                            android:progress="100"
                            android:progressDrawable="@drawable/doughnut_chart_stats_full"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                        <ProgressBar
                            android:id="@+id/AttendedProgressBar"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="210dp"
                            android:layout_height="210dp"
                            android:indeterminate="false"
                            android:max="100"
                            android:progress="0"
                            android:progressDrawable="@drawable/doughnut_chart_stats_progress"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                        <ProgressBar
                            android:id="@+id/ChangeSliderProgressBar"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="210dp"
                            android:layout_height="210dp"
                            android:indeterminate="false"
                            android:max="99"
                            android:progress="80"
                            android:progressDrawable="@drawable/doughnut_chart_stats_target"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                        <TextView
                            android:id="@+id/AttendedPercentage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0%"
                            android:textColor="@color/textColorWhite"
                            android:textSize="30dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="100">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="vertical"
                        android:background="@drawable/round_corner_layout_green">
                        <TextView
                            android:id="@+id/classAttended"
                            android:layout_width="wrap_content"
                            android:layout_height="70dp"
                            android:gravity="center"
                            android:text="0"
                            android:textSize="48dp"
                            android:layout_marginHorizontal="10dp"
                            android:textColor="@color/textColorWhite"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Attended"
                            android:textSize="16dp"
                            android:layout_marginHorizontal="10dp"
                            android:textColor="@color/textColorWhite"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="vertical"
                        android:background="@drawable/round_corner_layout_grey">
                        <TextView
                            android:id="@+id/classTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="70dp"
                            android:gravity="center"
                            android:text="0"
                            android:textSize="48dp"
                            android:layout_marginHorizontal="10dp"
                            android:textColor="@color/textColorWhite"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total"
                            android:textSize="16dp"
                            android:layout_marginHorizontal="10dp"
                            android:textColor="@color/textColorWhite"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="10dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/round_corner_layout_purple">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="2dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Set Goal"
                        android:textColor="@color/textColorWhite"
                        android:textSize="16dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="-12dp">
                    <com.google.android.material.slider.Slider
                        android:id="@+id/ChangeSliderId"
                        android:layout_width="0dp"
                        android:layout_weight="0.85"
                        android:layout_height="match_parent"
                        android:value="75"
                        android:valueFrom="50"
                        android:valueTo="99"
                        android:stepSize="1"
                        app:haloColor="@color/calResultChartBgRed"
                        app:tickColor="@color/calResultChartBgYellow"
                        app:thumbColor="@color/textColorWhite"
                        />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.15"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp">
                        <TextView
                            android:id="@+id/SliderValueView"
                            android:layout_width="match_parent"
                            android:textColor="@color/textColorWhite"
                            android:textSize="20dp"
                            android:gravity="center"
                            android:layout_height="match_parent"
                            android:text="0%"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/round_corner_layout_darkpuple">
                <TextView
                    android:id="@+id/msgTextField1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColorWhite"
                    android:paddingHorizontal="4dp"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:text=""/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="145dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/toAttendLayout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical"
                    android:background="@drawable/round_corner_layout_yellow"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.9"
                            android:layout_margin="8dp"
                            android:text="To Attend"
                            android:textSize="16dp"
                            android:textColor="@color/textColorWhite"/>
                        <TextView
                            android:id="@+id/toAttendLayoutChecked"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1"
                            android:layout_margin="8dp"
                            android:text=""
                            android:textSize="16dp"
                            android:textColor="@color/textColorWhite"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/toAttend"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="0"
                        android:textSize="48dp"
                        android:textColor="@color/textColorWhite" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/textColorWhite"
                        android:layout_margin="4dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginHorizontal="10dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:layout_weight="0.80"
                            android:text="View Stats"
                            android:textSize="18dp"
                            android:textColor="@color/textColorWhite"/>

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:layout_weight="0.20"
                            android:src="@drawable/ic_chevron_right_black_24dp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/toBunkLayout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical"
                    android:background="@drawable/round_corner_layout_red"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.9"
                            android:layout_margin="8dp"
                            android:text="To Leave"
                            android:textSize="16dp"
                            android:textColor="@color/textColorWhite"/>
                        <TextView
                            android:id="@+id/toBunkLayoutChecked"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1"
                            android:layout_margin="8dp"
                            android:text=""
                            android:textSize="16dp"
                            android:textColor="@color/textColorWhite"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/toBunk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="6"
                        android:textSize="48dp"
                        android:textColor="@color/textColorWhite" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/textColorWhite"
                        android:layout_margin="4dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginHorizontal="10dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:layout_weight="0.80"
                            android:text="View Stats"
                            android:textSize="18dp"
                            android:textColor="@color/textColorWhite"/>

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:layout_weight="0.20"
                            android:src="@drawable/ic_chevron_right_black_24dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="2dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/round_corner_layout_darkpuple">
                    <TextView
                        android:id="@+id/rate_change_stats_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textColorWhite"
                        android:textSize="18dp"
                        android:gravity="center"
                        android:text=""/>
                </LinearLayout>
                <!--Height 265dp-->
                <LinearLayout
                    android:id="@+id/recycler_view_layout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="4dp">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/result_stats_List_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>




</LinearLayout>