<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AttendanceReportActivity"
    android:orientation="vertical"
    android:background="@color/colorMainScreenWhite">
    <!--Top Action Bar-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:background="@color/colorHeaderBackground">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/back_btn_result"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_arrow_back_white_24dp"
                android:textColor="@color/colorLogoPrimary"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"/>
            <TextView
                android:id="@+id/headerMsg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Polls Report"
                android:textColor="@color/colorLogoPrimary"
                android:textSize="24dp"
                android:gravity="center"
                android:paddingLeft="15dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginHorizontal="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/OptionMenu"
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:text="&#8942;"
                android:textStyle="bold"
                android:textColor="@color/textColorWhite"
                android:gravity="center"
                android:textAppearance="?android:textAppearanceLarge"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"/>
        </LinearLayout>
    </RelativeLayout>
    <!--Content of screen-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <LinearLayout
                android:id="@+id/groupDoesNotExistView"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal"
                android:background="@drawable/round_corner_layout_light_white"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.03"
                    android:background="@color/calResultChartBgRed"
                    android:orientation="horizontal">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.97"
                    android:orientation="vertical"
                    android:padding="4dp"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Group does not exist"
                        android:textColor="@color/calResultChartBgRed"
                        android:textSize="24dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="group may be deleted by admin or may be internet connection is weak."
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="5dp"
                android:layout_margin="8dp"
                android:padding="10dp"
                android:background="@color/textColorWhite"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/titleOfPoll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24dp"
                    android:textColor="@color/calResultChartBgGrey"
                    android:text=""/>
                <TextView
                    android:id="@+id/descriptionOfPoll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="@color/colorCalculatorPressedButtonCal"
                    android:text=""/>
                <TextView
                    android:id="@+id/secondDescriptionOfPoll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="@color/colorCalculatorPressedButtonCal"
                    android:text=""/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="5dp"
                android:layout_margin="8dp"
                android:padding="10dp"
                android:background="@color/textColorWhite">
                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/pollsResultChart"
                    android:layout_width="match_parent"
                    android:layout_height="300dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dp"
                    android:textSize="18dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:text="Votes"
                    android:textAlignment="center"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/votedListView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>